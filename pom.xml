        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>**/*.jar</exclude>
                    <exclude>**/*.nbs</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/main/resources/Songs</directory>
                <filtering>false</filtering>
                <includes>
